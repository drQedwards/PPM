{
  "name": "@ryno-crypto/braiins-pool-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Braiins Pool â€” monitor workers, track earnings, and manage your Bitcoin mining operation through natural conversation.",
  "author": "Ryno Crypto Mining Services",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "braiins-pool-mcp-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "node --experimental-vm-modules node_modules/.bin/jest --testPathPattern=tests/",
    "test:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch --testPathPattern=tests/",
    "lint": "eslint src/ tests/",
    "format": "prettier --write src/ tests/",
    "typecheck": "tsc --noEmit",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.7.0",
    "redis": "^4.7.0",
